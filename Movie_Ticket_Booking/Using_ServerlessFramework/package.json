{
  "name": "movie-booking-serverless-api",
  "version": "1.0.0",
  "description": "Movie Ticket Booking CRUD API using Serverless Framework",
  "main": "index.js",
  "scripts": {
    "deploy": "serverless deploy",
    "deploy-dev": "serverless deploy --stage dev",
    "deploy-prod": "serverless deploy --stage prod",
    "remove": "serverless remove",
    "logs": "serverless logs -f",
    "invoke": "serverless invoke -f",
    "offline": "serverless offline",
    "test": "pytest",
    "test-coverage": "pytest --cov=app --cov=handlers --cov=utils --cov-report=html --cov-report=term-missing",
    "test-coverage-xml": "pytest --cov=app --cov=handlers --cov=utils --cov-report=xml",
    "test-verbose": "pytest -v -s",
    "test-watch": "pytest-watch"
  },
  "keywords": [
    "serverless",
    "aws",
    "lambda",
    "dynamodb",
    "api-gateway",
    "crud",
    "movie-booking"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "serverless": "^3.38.0",
    "serverless-offline": "^13.3.0",
    "serverless-python-requirements": "^6.1.2"
  }
}
